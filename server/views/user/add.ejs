<%- include ../partials/header.ejs %>

<%- include ../partials/mainNav.ejs %>

<!-- content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>
        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Name of Contact</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Name of Contact"
                name="name" required>
            </div>
            <div class="form-group">
                <label for="emailTextField">Email of Contact</label>
                <input type="text" class="form-control"
                       id="emailTextField"
                       placeholder="Enter the email of Contact"
                       name="email" required>
            </div>
            <div class="form-group">
                <label for="pNumTextField">Phone Number of Contact</label>
                <input type="number" class="form-control"
                       id="pNumTextField"
                       placeholder="Enter the Phone Number of Contact"
                       name="number" required>
            </div>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            <a href="/user_collect" class="btn btn-danger">
                <i class="fas fa-under"></i> Cancel</a>
        </form>
    </div>

</div>

<%- include ../partials/bottomNav.ejs %>

