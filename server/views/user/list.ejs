<%- include ../partials/header.ejs %>

<%- include ../partials/mainNav.ejs %>

<main class="container mx-auto">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <a href="/user_collect/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a User
            </a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- header row-->
                <tr>
                    <th class="text-center col-2">Username</th>
                    <th class="text-center col-2">Contact Email</th>
                    <th class="text-center col-1">Contact Number</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable template row -->

                <% for(let count=0; count < UserList.length; count++) {%>
                    <tr>
                        <td class="text-center text-white"><%= UserList[count].name%></td>
                        <td class="text-center text-white"><%= UserList[count].email%></td>
                        <td class="text-center text-white"><%= UserList[count].number%></td>
                        <td class="text-center col-1">
                            <a href="/user_collect/edit/<%= UserList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil alt>"></i> Edit
                            </a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/user_collect/delete/<%= UserList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>

<%- include ../partials/bottomNav.ejs %>

<%- include ../partials/footer.ejs %>
