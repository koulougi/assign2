<!-- contact form -->
<div id="contactForm" class="container mt-lg-5 mb-lg-5">
    <form action="/">
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputLName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputLName">
            </div>
        </div>
        <div class="row mb-3">
            <label for="pNum" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="pNum">
            </div>
        </div>

        <div class="input-group">
            <label for="userMsg" class="col-sm-2 col-form-label">Write your message</label>
            <textarea class="form-control" id="userMsg"></textarea>
        </div>
        <br>

        <a type="submit" class="btn btn-success" onclick="formStoreInfo()" href="/home">Send Message</a>

    </form>
</div>